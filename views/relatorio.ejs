<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- displays site properly based on user's device -->
  <link rel="stylesheet" href="/styles/header.css">
  <link rel="stylesheet" href="/styles/relatorio.css">
  <link rel="stylesheet" href="/styles/principal.css">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/logo.jpg">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap" rel="stylesheet">
  <title>Aquilacred</title>
</head>

<body>
  <header>
    
    <span></span>

    <input type="submit" style='width: 10rem;margin-left: 4.5rem;' class="botButton" id='callBot' value='Relatorio' >
    <!-- CONGRATIBILITY -->
    <div class='congrats'>
      <p>Bem Vindo,<br /><span>
          <%= user.name %>
        </span></p>
    </div>

    
  </header>

  <main>
    <div class="large" >
      <form id="form-generate" method='post' action="/generate/<%= user.username%>/<%= token %>">
        <div>
            <div>
              <label for="de">De:
                <input type="date" name="de" id='de'>
              </label>  
            </div>
            
            <div>
              <label for="ate">Até
                <input type="date" name="ate" id='ate'>
              </label>
            </div>
        </div>

        
        <div class='large_relatorio'>
          <div class='title'>
            <h3>Filtros</h3>
          </div>

          <div class='filters'>
            <label for='filtro_supervisor'>Supervisor
            <select name='supervisor' id='filtro_supervisor'>
              <option value="1">EQUIPE 1</option>
              <option value="2">EQUIPE 2</option>
              <option value="3">EQUIPE 3</option>
              <option value="4">EQUIPE 4</option>
              <option value="5">EQUIPE 5</option>
              <option value="6">EQUIPE 6</option>
              <option value="7">EQUIPE 7</option>
              <option value="8">EQUIPE 8</option>
              <option value="9">EQUIPE 9</option>
              <option value="10">EQUIPE 10</option>
            </select>
          </label>

            <label for='filtro_operacional'>Operacional
            <select name='supervisor' id='filtro_operacional'>
              <option value="1">1</option>
              <option value="1">2</option>
              <option value="1">3</option>
              <option value="1">4</option>
              <option value="1">5</option>
            </select>
          </label>

            <label for='filtro_status'>Status
            <select name='supervisor' id='filtro_status'>
              <option value="1">1</option>
              <option value="1">2</option>
              <option value="1">3</option>
              <option value="1">4</option>
              <option value="1">5</option>
            </select>
          </label>
          </div>



        </div>
        
      </form>
      <div>
        <input type="submit" value="Gerar" class="enviar" form='form-generate'/>
        <% if(isNaN(result)){%>
        <a href="/download" class='reset' style=''>Baixar</a>
        <% }%>
      </div>
      
    </div>
    
    <% if(isNaN(result)){%>
    
    <section id="transaction">
      <div>
        
        <table id="data-table">
          <thead>
          <tr>
            <th>Criado</th>
            <th>Status</th>
            <th>Operador</th>
            <th>Supervisor</th>
            <th >Nome</th>
            <th>CPF</th>
            <th>Tipo de Operação</th>
            <th>Salário</th>
            <th>Banco Digitado</th>
            <th>Nº Proposta</th>
            <th>Valor liberado</th>
            <th>Quitação</th>
            <th>Salário</th>
            <th>Banco Digitado</th>
            <th>Total Parcelas</th>
            <th>Parcelas Pagas</th>
            <th>Parcelas Restantes</th>
            <th>Taxa</th>
            <th>Obs</th>
          </tr>
          </thead>
          <tbody>


            <% for(var i=0; i<result.length; i++) { %>
              <tr>
                
                <td id='created_at'>
                  <%= String(result[i].created_at).slice(4, 25 ) %>
                </td>

                <td id='operador'><%= result[i].status %></td>
                <td id='operador'><%= result[i].operacional %></td>
                <td id='supervisor'><%= result[i].supervisor %></td>
                <td id='cli_nome' > <%= result[i].cli_nome %></td>
                <td id='tipo_operacao'><%= result[i].tipo_operacao %></td>
                <td id='rf_extra_base_margem'><%= result[i].rf_extra_base_margem %></td>
                <td id='b_digitado'><%= result[i].b_digitado %></td>
                <td id='n_proposta'><%= result[i].n_proposta %></td>
                <td id='v_liberado'><%= result[i].v_liberado %></td>
                <td id='quitacao'><%= result[i].quitacao %></td>
                <td id='salario'><%= result[i].salario %></td>
                <td id='b_digitado'><%= result[i].b_digitado %></td>
                <td id='total_parcelas'><%= result[i].total_parcelas %></td>
                <td id='qtd_pagas'><%= result[i].qtd_pagas %></td>
                <td id='parcelas_restantes'><%= result[i].parcelas_restantes %></td>
                <td id='taxa'><%= result[i].taxa %></td>
                <td id='obs'><%= result[i].obs %></td>
              </tr>
            <% }%>
          </tbody>
        </table>
      </div>
    </section>
    <%}%>
  </main>

  <a href="/">
    <img src="/images/logout.png" class='logout' alt="Logout" />
  </a>
  
  <a href="/principal/<%= user.username%>/<%= token%>">
    <img class='voltar' src="/images/voltar.png" alt="Voltar" />
  </a>


  


</body>
</html>


